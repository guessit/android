<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:guessit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_background_image_view"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/main_background"
        android:src="@drawable/main_background" />

    <mobi.guessit.guessit.view.components.FontFaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/guessit"
        android:id="@+id/main_guessit_text_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        guessit:fontFace="Lobster.ttf"
        android:textSize="70sp" />

</RelativeLayout>
