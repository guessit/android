<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:guessit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/level_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobi.guessit.guessit.activity.LevelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_above="@+id/level_input_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/level_image_view"
            android:src="@drawable/brazil" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/level_input_view_height"
        android:id="@+id/level_input_view"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/level_answer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#660000"
            android:layout_alignParentTop="true">

            <mobi.guessit.guessit.view.AnswerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:id="@+id/answer_view">

            </mobi.guessit.guessit.view.AnswerView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/level_keypad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/level_keypad_height"
            android:padding="@dimen/level_keypad_spacing"
            android:orientation="horizontal"
            android:background="#006600"
            >

            <LinearLayout
                android:id="@+id/level_keypad_keys_placeholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/level_keypad_spacing"
                android:orientation="vertical"
                >

            </LinearLayout>

            <mobi.guessit.guessit.view.components.FontFaceButton
                android:id="@+id/level_help_button"
                android:layout_width="@dimen/level_help_width"
                android:layout_height="match_parent"
                android:text="@string/question_mark"
                guessit:fontFace="JotiOne-Regular.ttf"
                android:textSize="@dimen/level_help_text_size"
                android:background="#008888"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
