<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:guessit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_background_image_view"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/main_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <mobi.guessit.framework.view.components.FontFaceTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_guessit_text_view"
            android:text="@string/guessit"
            guessit:fontFace="Lobster.ttf"
            android:textSize="@dimen/main_title_font_size"
            android:layout_marginBottom="-5dp" />

        <mobi.guessit.framework.view.components.FontFaceTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_tap_to_play_text_view"
            android:gravity="center"
            android:text="@string/tap_to_play"
            guessit:fontFace="Avenir Next Condensed-Bold.ttf"
            guessit:fontStyle="Bold"
            android:textSize="@dimen/main_tap_to_play_font_size"
            android:layout_marginTop="-5dp" />

    </LinearLayout>


</RelativeLayout>
